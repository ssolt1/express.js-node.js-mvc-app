extends layout

block content
  h1= title
  p Welcome to #{title}
  p
   if (user)
      p You are logged in as #{user.username}
      p
        a(href="/contacts").btn.btn-default To Contacts App
        | or
        p
        a(href="/auth/logout")  logout
    else
      p
        a(href="/auth/login").btn.btn-default Please login
        |  or
        p
        a(href="/auth/register")  Register
  p Total views: #{views}
